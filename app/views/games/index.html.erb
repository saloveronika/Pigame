<h3> Player 1: </h3>
<% @bot.hand.each do |card| %>
  <%= image_tag "#{card.image_name}.png", :width => 70, :height => 120 %>
<% end %>

<table>
  <td>
    <p> Draw_pile has <%= @g.draw_pile.length %> cards </p>
    <p>
      <% if $used %>
        <%=  image_tag "#{@trump.suit.downcase}.png", :width => 70, :height => 120 %>
      <% else %>
        <%=  image_tag "#{@trump.image_name}.png", :width => 70, :height => 120 %>
      <% end %>
      <%=  image_tag "17.jpg", :width => 70, :height => 120 %>
    </p>
  </td>
</table>

<h3> Player 2: </h3>
<% @player.hand.each do |card| %>
    <%=link_to (image_tag "#{card.image_name}.png", :width => 70, :height => 120), games_step_path(:id => @game.id, :cards => card.to_yaml) %>
<% end %>

    <%= link_to (image_tag "b20.gif", :width => 85, :height => 85), games_end_step_path(:id => @game.id), {:style=>"position: absolute;  width: 30%; padding-top: 20px "} %>
