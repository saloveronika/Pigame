<h3> Player 1: </h3>
<% @bot.hand.each do |card| %>
  <%= image_tag "#{card.image_name}.png", :width => 70, :height => 120 %>
<% end %>

</br>
</br>
<table>
  <td>
    <p>

      <%=  image_tag "#{@trump.image_name}.png", :width => 70, :height => 120 %>
      <%=  image_tag "17.jpg", :width => 70, :height => 120 %>
    </p>
  </td>
  <td>

    <p>

      <% if @table  %>
        <% @table.each do |card| %>
          <%= image_tag "#{card.image_name}.png", :width => 70, :height => 120 %>
        <% end %>
      <% end %>

    </p>
  </td>
</table>
</br>
</br>

<h3> User: </h3>
<% @player.hand.each do |card| %>
  <% if @step %>
    <% if f = @player.is_there_fight_cards(@step, @trump) %>
      <% @a = f.select { |fight| fight if fight == card}.first  %>
      <% if @a %>
        <%=link_to (image_tag "#{@a.image_name}.png", :width => 70, :height => 120), games_fight_path(:cards => card.to_yaml) %>
      <% else %>
        <%= image_tag "#{card.image_name}.png", :width => 70, :height => 120 %>
      <% end %>

    <% else %>
      <%= image_tag "#{card.image_name}.png", :width => 70, :height => 120 %>
    <% end %>

  <% else %>
    <%= image_tag "#{card.image_name}.png", :width => 70, :height => 120 %>

  <% end %>
<% end %>

  <%= button_to "End fight", games_loose_fight_path %>

